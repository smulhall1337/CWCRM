<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Participant.
    -->
    <changeSet id="20181107220259-1" author="jhipster">
        <createTable tableName="participant">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="last_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="registration_date" type="date">
                <constraints nullable="true" />
            </column>

            <column name="address_1" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="address_2" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="city" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="state" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="country" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="dob" type="date">
                <constraints nullable="true" />
            </column>

            <column name="phone" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="email" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="zip" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="m_an_number" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="contact_status_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_participant_contact_status_id" />
            </column>            <column name="contact_sub_status_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_participant_contact_sub_status_id" />
            </column>            <column name="waiver_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_participant_waiver_id" />
            </column>
            <column name="support_coordinator_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
    </changeSet>
    
    <!-- Added the entity audit columns -->
    <changeSet id="20181214174310-audit-1" author="jhipster-entity-audit">
        <addColumn tableName="participant">
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </addColumn>
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
